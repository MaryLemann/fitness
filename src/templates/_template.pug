doctype html

block variables
html(lang= "ru")
  head
    meta(charset="utf-8")
    title #{title}
    meta(content="Matvey Phoenix" name="author")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")
    link(rel="shortcut icon" href="./assets/images/favicon.png" type="image/png")
    link(rel='stylesheet' href='./assets/styles/main.min.css')

    <!--[if lt IE 9]>
    script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
    <![endif]-->

  body
    .wrapper
      include ./modules/_header
      if banner == true
        .banner
          .container.container--banner 
            img.banner__img(src="./assets/images/banner.jpg")

      .main-content
        .container.container--content
          main.content
            block content
    include ./modules/_footer






